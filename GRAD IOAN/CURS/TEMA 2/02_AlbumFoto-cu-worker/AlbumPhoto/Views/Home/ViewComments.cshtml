@model List<AlbumPhoto.Models.Comments>

@{
    Layout = null;
    ViewBag.Title = "Comentarii";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
    </head>

    <body background-color="#6699ff">
        <div align="center">
            <h1>Vizualizare comentarii</h1>
        </div>
        <div style="margin-left:70px">
            @foreach (var item in Model)
            {
                <p style="color:brown; font-weight:bold; font-size:30px">@item.MadeBy</p>
                <p style="background-color:#f2f2f2; color:black; font-style:italic; font-size:25px">@item.Text</p>
                <br/><br/>
            }
        </div>

    </body>
</html>
